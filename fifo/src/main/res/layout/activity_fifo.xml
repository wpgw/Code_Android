<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".fifoActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:text="移 库" />

        <RadioButton
            android:id="@+id/rd_fifo_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:text="FIFO发料 " />
    </RadioGroup>

    <EditText
        android:id="@+id/et_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:ems="20"
        android:hint="库位..."
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp">
            <EditText
                android:id="@+id/et_barcode"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="40dp"
                android:ems="10"
                android:hint="请扫码..."
                android:inputType="textPersonName"
                android:nextFocusLeft="@+id/btn_confirm"
                android:nextFocusRight="@+id/btn_confirm"
                android:nextFocusUp="@+id/btn_confirm"
                android:nextFocusDown="@+id/btn_confirm"
                android:text="" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="确认" />

            <ImageButton
                android:id="@+id/btn_scan"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:background="@drawable/scan" />

        </LinearLayout>

    <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="40dp"
            android:text="Info:" />

    <LinearLayout
        android:id="@+id/layout_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_canList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:singleLine="false"
            android:lines="12"
            android:maxLines="12"
            android:scrollbars="vertical"
            android:text="FIFO允许清单"
            android:textSize="13sp"
            android:background="#F6F6E6" />

        <TextView
            android:id="@+id/tv_cannotList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:singleLine="false"
            android:lines="12"
            android:maxLines="12"
            android:scrollbars="vertical"
            android:text="FIFO不允许清单"
            android:textSize="13sp"
            android:background="#F6F6E6" />

    </LinearLayout>

</LinearLayout>